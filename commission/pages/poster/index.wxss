.pos_bot .btn-danger-o {
    border-radius: 50rpx;
    color: #ff5555;
    border: 1px solid #ff5555;
    height: 52rpx;
    float: right;
    margin-top: 24rpx;
}

.pos_bot .btn-danger {
    border-radius: 50rpx;
    background-color: #ff5555;
    border-color: #ff5555;
    height: 52rpx;
    float: right;
    margin: 24rpx 25rpx 0 12rpx;
