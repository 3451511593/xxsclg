        <view class="swiper-slide adv-slide" wx:for="{{diyitem.data}}" wx:for-item="adv">
            <navigator url="{{adv.linkurl}}">
                <image mode="widthFix" src="{{adv.imgurl}}"></image>
            </navigator>
        </view>
    </view>
</view>
