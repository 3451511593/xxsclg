.fui-page {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
    position: fixed;
}

map {
    flex: 1;
}

.fui-list .angle:after,.fui-list-group-title .angle:after {
    display: none;
}

.fui-list-group1 {
    display: block;
}

.fui-list-group1.out {
    display: none;
}

.fui-list-group2 {
    display: none;
}

.fui-list-group2.in {
    display: block;
}

.inner {
    width: 100%;
    background: #fff;
}

.fui-tell {
    width: 100%;
    height: 86rpx;
    text-align: center;
    line-height: 86rpx;
    color: #000;
    font-size: 28rpx;
    position: relative;
}

.fui-tell:after {
    content: " ";
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    height: 1px;
    border-top: 1px solid #ebebeb;
    color: #D9D9D9;
    transform-origin: 0 0;
    transform: scaleY(0.5);
}