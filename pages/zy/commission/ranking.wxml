<view class="container">
  <view class="rankhead">
    <view class="head">
      <image class="bgimage" src="https://file.sxnyhy.com/images/rank_head_bg.png"></image>
      <view class="child" style="margin-left:36rpx"></view>
      <view class="gold">
        <image src="https://file.sxnyhy.com/images/rank_icon_gold.png"></image>
        <view class="myorder">{{user.paiming}}</view>
        <view class="text">我的名次</view></view>
      <view class="child" style="margin-right:36rpx">
        <view class="text">{{user.commission_total}}</view>
        <view class="text2">{{commission_title}}</view></view>
    </view>
    <view class="title">{{commission_title}}排名为定时刷新(最多显示{{maxnum}}名)</view></view>
  <view class="ranklist">
    <view class="main">
      <view class="line title">
        <view class="col">排名</view>
        <view class="col center">昵称</view>
        <view class="col index">{{commission_title}}</view></view>
      <view class="ranklists">
        <block wx:for="{{list}}" wx:key="key" wx:for-item="item">
          <view class="line">
            <view class="col rank">
              <image wx:if="{{item.gold}}" class="gold-img" src="{{item.gold}}"></image>{{item.index}}</view>
            <view class="col center">
              <view class="avatar">
                <image src="{{item.avatar}}"></image>
              </view>
              <view class="nickname">{{item.nickname}}</view></view>
            <view class="col index">{{item.commission_total}}</view></view>
        </block>
      </view>
      <button type="warn" class="btn" disabled="{{disabled}}" bindtap="more" style="width:94%">加载更多</button></view>
  </view>
</view>