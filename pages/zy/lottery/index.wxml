<view class="game-wrapper">
  <view class="game-top">
    <image src="{{banner}}" mode="widthFix"></image>
  </view>
  <view class="game-header">
    <view class="game-bgkuai"></view>
    <text class="game-biaoti">所有抽奖</text>
    <view class="game-zjjl">
      <navigator url="myreward">
        <text>中奖记录></text></navigator>
    </view>
  </view>
  <block wx:if="{{list && list.length>0}}">
  <view wx:for="{{list}}" bindtap="togame" class="data" data-id="{{item.lottery_id}}" data-total="{{item.total}}" data-tips="{{item.lottery_cannot}}">
    <image class="panicon" src="{{item.lottery_icon}}"></image>
    <view class="title"><text class="type">[{{item.type_name}}]</text> {{item.lottery_title}}</view>
      <button class="game-item" style="{{item.total==0?'background-color:#999':''}}">去抽奖</button>
      <view class="total">{{item.start_time}} ~ {{item.end_time}} 抽奖次数: <text class="type">{{item.total}}</text></view>
      <view class="total">{{item.notes}}</view>
  </view>
  </block>
  <block wx:else>
            <view class="center">
                <view class="empty-tip">
                    <image class="light" src="/static/images/icon/nolist.png"></image>
                    <view class="text-cancel">暂时没有任何抽奖活动</view>
                </view>
            </view>
    </block>
</view>