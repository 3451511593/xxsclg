<view class="container">
  <view class="signCon">
    <view class="signHeader" style="{{set.maincolor?'background:'+set.maincolor:''}}">
      <view class="signHeader-left">
        <view>连续{{set.textsign}}</view>
        <view>
          <text style="color: #FEF332;font-weight:bold;font-size:34rpx;">{{signinfo.orderday}}</text>天</view></view>
      <view class="signHeader-intro">
        <view class="signHeader-img">
          <image src="{{member.avatar}}"></image>
        </view>
        <view class="signHeader-name">{{member.nickname}}</view>
        <view class="signHeader-credit">我的{{set.textcredit}}：{{member.credit1}} 积分</view>
        <view bindtap="{{signinfo.signed==0?'toSign':''}}" class="signHeader-bind">
          <block wx:if="{{signinfo.signed!=0}}">
            <text>今日{{set.textsigned}}</text></block>
          <block wx:else>
            <text>点击{{set.textsign}}</text></block>
        </view>
      </view>
      <view class="signHeader-total">
        <view bindtap="toSignrecord" class="signHeader-totalRecord">详细记录</view>
        <view>总{{set.textsign}}</view>
        <view>
          <text style="color: #FEF332;font-weight:bold;font-size:34rpx;">{{signinfo.sum}}</text>天</view></view>
    </view>
    <view class="calendar">
      <view bindtap="toDate" class="top-handle">
        <image src="/static/images/icon-white/hdfk.png"></image>
        <text>{{yearShow}}年{{monthShow}}月</text></view>
      <view class="dateYear" hidden="{{dateHidden}}">
        <block wx:for="{{months}}" wx:for-item="item">
          <view bindtap="reDatelist" class="{{yearShow==item.year&&monthShow==item.month?'dateYearlist':''}}" data-month="{{item.month}}" data-year="{{item.year}}">{{item.year}}年{{item.month}}月</view></block>
      </view>
      <view class="days">
        <block wx:for="{{calendar}}" wx:for-item="date">
          <view class="daysRow">
            <block wx:for="{{date}}" wx:for-item="item">
              <block wx:if="{{item.day!=0}}">
                <view data-month="{{item.month}}" data-year="{{item.year}}" bindtap="{{item.signed==1?'':'oldSign'}}" class="daysColumn" data-date="{{item.date}}" data-day="{{item.day}}">
                  <view style="border: {{yearShow==item.year&&monthShow==item.month&&today==item.day?'1px solid #24B2F4':''}}">{{item.day}}</view>
                  <block wx:if="{{item.signed==1}}">
                    <view class="resign">
                      <image src="https://file.sxnyhy.com/images/icon-correct.png"></image>
                    </view>
                  </block>
                </view>
              </block>
            </block>
          </view>
        </block>
      </view>
      <view class="signDate-confirm">提示：点击{{set.textsignforget}}日期可{{set.textsignold}}哦~</view></view>
    <view class="signGift" wx:if="{{advaward.order}}">
      <view class="signGift-nav">
        <view class="signGift-navLeft">
          <image src="https://file.sxnyhy.com/images/icon-sign.png"></image>
          <text>连续签到有礼</text></view>
        <view class="signGift-navRight">连续签到即可领取</view></view>
      <view class="signGift-content">
        <view class="line"></view>
        <block wx:for="{{advaward.order}}" wx:for-item="item">
          <view class="signGiftitem">
            <view class="signGiftitem-credit">
              <view class="signCredit-num">+{{item.credit}}</view>
              <view class="signCredit-title">积分</view>
              <view class="signCredit-dir"></view>
            </view>
            <view class="signGiftitem-circle" style="background-color:{{item.candraw!=null?set.maincolor:''}};">
              <block wx:if="{{item.candraw!=null}}">
                <image src="https://file.sxnyhy.com/images/icon-sure.png"></image>
              </block>
            </view>
            <view class="signGiftitem-day" style="color:{{item.candraw!=null?set.maincolor:''}};">{{item.day}}天</view>
            <view data-day="{{item.day}}" bindtap="{{item.candraw!=null&&item.drawed==null?'getCredit':''}}" class="signGiftitem-get" style="color:{{signinfo.orderday>item.day&&item.candraw!=null&&item.drawed==null?set.maincolor:''}};border:1px solid {{signinfo.orderday>item.day&&item.candraw!=null&&item.drawed==null?set.maincolor:''}};">
              <block wx:if="{{item.drawed!=null}}">
                <text>已领取</text></block>
              <block wx:else>
                <text>{{item.candraw!=null&&item.drawed==null?'领取':'未达到'}}</text></block>
            </view>
          </view>
        </block>
      </view>
    </view>
  </view>
</view>