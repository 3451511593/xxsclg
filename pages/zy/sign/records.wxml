<block wx:if="{{list.length>0}}">
  <view class="container">
    <block wx:for="{{list}}" wx:for-item="item">
      <view class="recordList">
        <view class="recordList-text">
          <view class="signTitle">{{item.log}}</view>
          <view class="signTime">
            <block wx:if="{{item.type==0}}">
              <text class="signTime-text">日常签到</text></block>
            <block wx:if="{{item.type==1}}">
              <text class="signTime-text" style="background-color:#FF9326;">连续签到奖励</text></block>
            <block wx:if="{{item.type==2}}">
              <text class="signTime-text" style="background-color:#FF0000;">总奖励</text></block>
            <text>{{item.date}}</text></view>
        </view>
        <view class="recordList-credit">+{{item.credit}}</view>
        <view style="clear:both"></view>
        </view>
    </block>
  </view>
</block>
<block wx:else>
  <view class="recordNone">
    <view class="recordNone-img">
      <image src="https://file.sxnyhy.com/images/information.png"></image>
    </view>
    <view class="recordNone-text">
      <text>还未有任何参与记录~</text></view>
  </view>
</block>